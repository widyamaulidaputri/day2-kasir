<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    android:background="#00EF8BAD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etNama"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama"/>

    <EditText
        android:id="@+id/etAlamat"
        android:inputType="text"
        android:hint="Alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="DuplicateIds" />

    <RadioGroup
        android:id="@+id/rgJenisKelamin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvJenisKelamin"
            android:text="Jenis Kelamin"
            android:textSize="17dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbPria"
            android:text="Pria"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/rbWanita"
            android:layout_marginLeft="10dp"
            android:text="Wanita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rgTipePelanggan"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTipePelanggan"
                android:text="Tipe Pelanggan"
                android:textSize="17dp"
                android:padding="15dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/rbPlatinum"
                android:text="Platinum"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbGold"
                android:layout_marginLeft="10dp"
                android:text="Gold"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbSilver"
                android:layout_marginLeft="10dp"
                android:text="Silver"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <RadioGroup
            android:id="@+id/rgNamaBarang"
            android:layout_width="150dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNamaBarang"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Nama Barang" />

            <RadioButton
                android:id="@+id/rbKipasAngin"
                android:text="Kipas Angin"
                android:layout_marginLeft="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbRiceCooker"
                android:layout_marginLeft="10dp"
                android:text="Rice Cooker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rbKompor"
                android:layout_marginLeft="10dp"
                android:text="Kompor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RadioGroup>

    </LinearLayout>

    <EditText
        android:id="@+id/etJumlahBarang"
        android:hint="Jumlah Barang"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnProses"
            android:text="Proses"
            android:layout_marginRight="10dp"
            app:cornerRadius="10dp"
            android:onClick="clickproses"
            android:backgroundTint="@color/purple_200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:backgroundTint="@color/purple_200"
            app:cornerRadius="10dp"
            android:onClick="clickcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>